<Window x:Class="VLSM_Calc.ToolWindows.SubnetWildCardConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLSM_Calc.ToolWindows"
        mc:Ignorable="d"
        Title="Wildcard calculator" Height="90" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Subnet mask" Margin="5, 5, 2, 2" Width="100" TextAlignment="Right"/>
            <TextBox Name="SubnetMaskInput" Text="255.255.255.0" Width="120" Margin="2"/>
            <Button Name="SubnetButton" Margin="2, 2, 2, 2" Click="SubnetButton_Click">Convert</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Wildcard mask" Margin="5, 5, 2, 2" Width="100" TextAlignment="Right"/>
            <TextBox Name="WildcardInput" Text="0.0.0.255" Width="120" Margin="2"/>
            <Button Name="WildcardButton" Margin="2" Click="WildcardButton_Click">Convert</Button>
        </StackPanel>
    </StackPanel>
</Window>
